config PPC_WSP
	bool
	select PPC_A2
	select GENERIC_TBSYNC
	select PPC_ICSWX
	select PPC_SCOM
	select PPC_XICS
	select PPC_ICP_NATIVE
	select PCI
	select PPC_IO_WORKAROUNDS if PCI
	select PPC_INDIRECT_PIO if PCI
	select PPC_WSP_COPRO
	default n

menu "WSP platform selection"
	depends on PPC_BOOK3E_64

config PPC_PSR2
	bool "PowerEN System Reference Platform 2"
	select EPAPR_BOOT
	select PPC_WSP
	default y

config PPC_CHROMA
	bool "PowerEN PCIe Chroma Card"
	select EPAPR_BOOT
	select PPC_WSP
	default y

endmenu

config PPC_A2_DD2
	bool "Support for DD2 based A2/WSP systems"
	depends on PPC_A2

config WORKAROUND_ERRATUM_463
	depends on PPC_A2_DD2
	bool "Workaround erratum 463"
	default y

config PPC_WSP_COPRO
	depends on PPC_WSP && PPC_ICSWX
	bool "Support for WSP coprocessors"
	select ANON_INODES
	select PPC_CONTEXT_PROTECTION
	default y

source "arch/powerpc/platforms/wsp/copro/Kconfig"
